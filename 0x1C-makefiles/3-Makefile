# Makefile for the 'school' executable

# Compiler options
CC = gcc

# Name of the executable
NAME = school

# List of source files
SRC = main.c school.c

# List of object files (automatically generated from source files)
OBJ = $(SRC:.c=.o)

# Program to delete files
RM = rm -f

# Rule to build the executable
all: $(NAME)

# Rule to link object files and create the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to compile individual source files
%.o: %.c
# $(CC) $(CFLAGS) -c $< -o $@

# Rule to clean Emacs and Vim temporary files, object files, and the executable
clean:
	$(RM) *~ *.swp $(NAME)

# Rule to clean object files
oclean:
	$(RM) $(OBJ)

# Rule to clean Emacs and Vim temporary files, object files, and the executable
fclean: clean oclean

# Rule to force recompilation of all source files
re: fclean all

# Set phony targets
.PHONY: all clean oclean fclean re
